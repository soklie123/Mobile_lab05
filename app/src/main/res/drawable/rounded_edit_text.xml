<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- The shape is a solid white background -->
    <solid android:color="@android:color/white" />

    <!-- Defines the border around the EditText -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" /> <!-- Light Gray border color -->

    <!-- This defines the rounded corners -->
    <corners android:radius="12dp" />

    <!-- Optional: Add padding inside the drawable for the text -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

</shape>
